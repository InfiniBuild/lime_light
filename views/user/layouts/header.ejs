/* Top bar */
        .top-bar {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 5px 0;
            text-align: center;
        }

        /* Header */
        header {
            background-color: #34495e;
            color: #ecf0f1;
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .logo {
            font-size: 1.5rem;
            font-weight: bold;
        }
        nav ul {
            display: flex;
            list-style: none;
        }
        nav ul li {
            margin-left: 20px;
        }
        nav ul li a {
            color: #ecf0f1;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        nav ul li a:hover {
            color: #3498db;
        }
